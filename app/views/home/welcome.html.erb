<div style="margin-bottom:50px;width:90%; padding-top:20px">
  <div class="offset1">
    <h1><%= current_user.first_name %> <%= current_user.surname %></h1>
    <hr>
    <div class="tabbable tabs-left">
      <ul class="nav nav-tabs nav-stacked">
        <li class="active"><a href="#1" data-toggle="tab"><%= image_tag "IndexHome/projecticon.png", :size=>"70x70"%></a></li>
        <li><a href="#2" data-toggle="tab"><%= image_tag "Navbar/home.png", :size=> "70x70"%></a></li>
        <li><a href="#3" data-toggle="tab"><%= image_tag "Home/JOBORDERbuttoncopy.png", :size=>"70x70"%></a></li>
        <li><a href="#4" data-toggle="tab"><%= image_tag "Navbar/helpicon.png", :size=>"70x70"%></a></li>
      </ul>
      <div class="tab-content">
        <div class="tab-pane active" id="1">
          <div>
            <div class="tabbable-fixed-top">
              <ul class="nav nav-pills">
                <li><h1>project history</h1></li>
                <li style="padding-top:10px; padding-left:10px;" class="active"><a href="#5" data-toggle="tab">Pending <%= "(#{@pending.length})" %></a></li>
                <li style="padding-top:10px"class=""><a href="#6" data-toggle="tab">In Progress</a></li>
                <li style="padding-top:10px" class=""><a href="#7" data-toggle="tab">Completed</a></li>
              </ul>
              <div class="tab-content">
                <div class="tab-pane active" id="5">
                  <h2><%= image_tag "Status/pending.png", :size=>"50x50"%> Pending</h2>
                  <div class="CSSTableGenerator">
                    <% if !@pending.nil? %>
                      <table>
                        <% @pending.in_groups_of(4, false).each do |group| %>
                        <tr>
                          <% group.each do |project| %>
                          <td>
                            <div class="title"><%= link_to project.project_name, "/#{current_user.username}/#{project.project_name}" %></div>
                            <%= project.category.name %><br>
                            <b>Requested by:</b> <%= project.first_name %> <%= project.surname %><br>
                            <b>Target date:</b> <%= project.target_date.strftime("%b %d, %Y") %><br>
                          </td>
                          <% end %>
                        </tr>
                        <% end %>
                      </table>
                    <% else %>
                      You have no pending job requests.
                    <% end %>
                  </div>
                </div>
                <div class="tab-pane" id="6">
                  <h2><%= image_tag "Status/inProgress.png", :size=>"50x50"%> In Progress</h2>
                  <div class="span9">
                    <% if !@inProgress.nil? %>
                      <% @inProgress.in_groups_of(3, false).each do |group| %>
                        <% group.each do |project| %>
                          <div class="span3" style="float: left; height: 350px; width: 200px; overflow: hidden; background-color: white; padding: 10px; margin-bottom: 10px;">
                            <%=link_to (image_tag project.image_url, :title=>project.title, 
                              :id=>"capslide_img_cont1"), project.image_url, 
                              {:id =>"capslide_img_cont1", :class => "fancybox"} %>
                            <div class="ic_category"><%= project.category.name %></div>
                            <div class="title"><%= link_to project.title, "/#{current_user.username}/#{project.title}" %></div>
                            <%= link_to project.project_link, project.project_link %><br><br>
                          </div>
                        <% end %>
                      <% end %>
                    <% else %>
                      You are not doing any projects as of now.
                    <% end %>
                  </div>
                  <hr>
                  <div class="span9">
                    <% if !@current_orders.nil? %>
                      <h2>Accepted Job Requests</h2>
                      <% @current_orders.in_groups_of(3, false).each do |group| %>
                        <% group.each do |project| %>
                          <div class="span3" style="float: left; height: 350px; width: 200px; overflow: hidden; background-color: white; padding: 10px; margin-bottom: 10px;">
                            <%=link_to (image_tag "inprogress.png", :title=>project.project_name, 
                              :id=>"capslide_img_cont1"), "inprogress.png", 
                              {:id =>"capslide_img_cont1", :class => "fancybox"} %>
                            <div class="ic_category"><%= project.category.name %></div>
                            <div class="title"><%= link_to project.project_name, "/#{current_user.username}/#{project.project_name}" %></div>
                            <b>Requested by:</b> <%= project.first_name %> <%= project.surname %><br>
                            <b>Target date:</b> <%= project.target_date.strftime("%b %d, %Y") %><br>
                          </div>
                        <% end %>
                      <% end %>
                    <% else %>
                      You have no job requests currently in progress.
                    <% end %>
                  </div>
                </div>
                <div class="tab-pane" id="7">
                  <h2><%= image_tag "Status/accomplished.png", :size=>"50x50"%>Completed</h2>
                  <div class="span9">
                    <% if !@completed.nil? %>
                      <% @completed.in_groups_of(3, false).each do |group| %>
                        <% group.each do |project| %>
                          <div class="span3" style="float: left; height: 350px; width: 200px; overflow: hidden; background-color: white; padding: 10px; margin-bottom: 10px;">
                            <%=link_to (image_tag project.image_url, :title=>project.title, 
                              :id=>"capslide_img_cont1"), project.image_url, 
                              {:id =>"capslide_img_cont1", :class => "fancybox"} %>
                            <div class="ic_category"><%= project.category.name %></div>
                            <div class="title"><%= link_to project.title, "/#{current_user.username}/#{project.title}" %></div>
                            <%= link_to project.project_link, project.project_link %><br><br>
                          </div>
                        <% end %>
                      <% end %>
                    <% else %>
                    You have not completed any projects yet.
                    <% end %>
                  </div>
                  <hr>
                  <div class="span9">
                    <% if !@completed_orders.nil? %>
                      <h2>Accomplished Job Requests</h2>
                      <% @completed_orders.in_groups_of(3, false).each do |group| %>
                        <% group.each do |project| %>
                          <div class="span3" style="float: left; height: 350px; width: 200px; overflow: hidden; background-color: white; padding: 10px; margin-bottom: 10px;">
                            <%=link_to (image_tag "goojab.gif", :title=>project.project_name, 
                              :id=>"capslide_img_cont1"), "goojab.gif", 
                              {:id =>"capslide_img_cont1", :class => "fancybox"} %>
                            <div class="ic_category"><%= project.category.name %></div>
                            <div class="title"><%= link_to project.project_name, "/#{current_user.username}/#{project.project_name}" %></div>
                            <b>Requested by:</b> <%= project.first_name %> <%= project.surname %><br>
                            <b>Target date:</b> <%= project.target_date.strftime("%b %d, %Y") %><br>
                          </div>
                        <% end %>
                      <% end %>
                    <% else %>
                    You have not completed any job requests yet. Get to work!
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="tab-pane" id="2">
          <h3>Project Portfolio</h3> <%=button_to "Edit Portfolio"%>
          </hr>
          <% @projects.each do |project| %>
              <div class="span3" style="float: left; height: 500px; overflow: hidden; background-color: white; padding: 10px; margin-bottom: 10px;">
                  <%=link_to (image_tag project.image_url, :title=>project.title, :id=>"capslide_img_cont1"), project.image_url, {:id =>"capslide_img_cont1", :class => "fancybox"} %>
                  <p class="ic_category"><%= project.category.name%></p>
                  <h3><%= project.title%></h3>
                  <p><%= project.description %></p>
            </div>
          <%end%>
        </div>
        <div class="tab-pane" id="3">
          <h3>Job Request Form</h3>
          </hr>
          <%= form_for(:order, :url => { :controller => 'orders',:action => 'new'}) do |f|%> <br>
            <center>
              <table>
                <tr><td>Project Name:</td><td> <%= f.text_field :project_name %></td></tr>
                <tr><td>Category:</td><td> <%= f.collection_select(:category_id, Category.all, :id, :name)%> </td><tr>
                <tr><td>First Name:</td><td><%= f.text_field :first_name %></td></tr>
                <tr><td>Last Name:</td><td> <%= f.text_field :surname%> </td></tr>
                <tr><td>E-mail:</td><td> <%= f.text_field :email %> </td></tr>
                <tr><td>Contact No.: </td><td><%= f.text_field :mobile %> </td></tr>
                <tr><td>Project Description: </td><td><%= f.text_field :projectdescription %> </td></tr>
                <tr><td>Number of Workers Needed:</td><td> <%= f.text_field :number_of_workers %> </td><tr>
                <tr><td>Skills Needed:</td><td><%= f.text_field :skills%> </td></tr>
                <tr><td>User/s of Choice:</td><td><%= f.collection_select(:user_id, User.all, :id, :first_name)%> </td></tr>
                <tr><td>Technicalities:</td><td><%= f.text_field :technicalities %> </td></tr>
                <tr><td>Aesthetics: </td><td><%= f.text_field :aesthetics %> </td></tr>
                <tr><td>Target Date:</td><td> <%= f.text_field :target_date%> </td><tr>
                <tr><td>Start Date: </td><td><%= f.text_field :start_id%></td></tr>
              </table>
              <%= f.submit "Post Job Order" %> <br>
            </center>
          <% end %>
        </div>
        <div class ="tab-pane" id="4">
          WOOOO
        </div>
      </div>
    </div>
  </div>
</div>
