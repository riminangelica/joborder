<% content_for :right do %>
    <div class="row-fluid">
        <div class="span4 offset4" style="margin-top:100px; box-shadow: 0px 0px 15px #e5e5e5">
            <center>       <div style="background: #20815d; color:#fff; padding:2px">
    <h4>RESEND CONFIRMATION E-MAIL</h4>
</div>
<div style="background:#e4e4e4; padding:10px">
<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
  <p> Submit your e-mail address and we'll resend your confirmation instructions.</p>
  <div>E-mail:<br>
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.submit "Resend confirmation instructions" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
<% end %>