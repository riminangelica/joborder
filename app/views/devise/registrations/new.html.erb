<% content_for :left do %>
    <div class="row-fluid">
    <div class="span4 offset4" style="margin-top:100px; box-shadow: 0px 0px 15px #e5e5e5">
    <div style="background: #20815d; color: #fff; padding:2px">
        <center>        <h4>CREATE AN ACCOUNT</h4>
    </div>
    <div style="background:#e4e4e4; padding:10px">
        <center><table>
  <tr>
    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <tr><td><%= f.label :username %></td>
    <td><%= f.text_field :username, :autofocus => true, :placeholder => "Type your username" %></td></tr>

    <tr><td><%= f.label :email %></td>
    <td><%= f.email_field :email, :placeholder => "blah@blah.blah" %></td></tr>

    <!-- <#% if f.object.password_required? %> -->
      <tr><td><%= f.label :password %></td>
      <td><%= f.password_field :password, :placeholder => "********" %></td></tr>

      <tr><td><%= f.label "Re-enter" %></td>
      <td><%= f.password_field :password_confirmation, :placeholder => "Re-enter password plis :3" %></td></tr>
    <!-- <#% end %> -->
</table>
    <div><%= f.submit "Sign up" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
<%end%>
</div>
</div>
</div>