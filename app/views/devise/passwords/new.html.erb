<% content_for :right do %>
    <div class="row-fluid">
        <div class="span4 offset4" style="margin-top:100px; box-shadow: 0px 0px 15px #e5e5e5">
            <div style="background: #20815d; color: #fff; padding:2px;">
                <center>
                    <h4>FORGOT YOUR PASSWORD?</h4></div>
    <div style="background: #e4e4e4; padding: 10px">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>
  <center>
  <div><p>Submit your e-mail address and we'll send you a link to reset your password.</p>
      <BR>E-mail:<BR>
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.submit "Send me reset password instructions" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>
<% end %>