<%unless user_signed_in?%>


<div class ="container-fluid">
  <div class = "row-fluid">
    <div class="span12">
      <div class="container">
        <div id="example" class="modal hide fade in" style="display: none; ">
          <div class="modal-header">
            <a class="close" data-dismiss="modal">Ã—</a>
            <h3>Sign In</h3>
          </div>
          <div class="modal-body">
            <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
            <table>
              <tr><td>Email: </td>
                <td>     <%= f.text_field :email, :autofocus => true, :placeholder => "Hello" %></td></tr>
                <tr><td>Password:</td>
                  <td><%= f.password_field :password, :placeholder => "********" %></td></tr>
                </table>
                <% if devise_mapping.rememberable? -%>
                <div><%= f.check_box :remember_me %> Remember me</div>
                <% end -%>  <br>
                <div><%= f.submit "Sign in" %></div>
                <% end %>
              </div>
              <div class="modal-footer">
               <%= render "devise/shared/links" %>
               <br>
               <a data-toggle="modal" href="#example" class="btn btn-primary btn-large">Launch demo modal</a>
               <%= link_to (image_tag "Devise/facebookicon.png", :size => "60x60", :title => "Facebook"), user_omniauth_authorize_path(:facebook)%>
               <%= link_to (image_tag "Devise/twittericon.png", :size => "60x60", :title => "Twitter"),  user_omniauth_authorize_path(:twitter)%>
               <%= link_to (image_tag "Devise/github.png", :size => "60x60", :title => 'Github'),  user_omniauth_authorize_path(:github)%>

             </div>
