<% content_for :right do %>


    <div class ="container-fluid">
        <div class = "row-fluid">
                <div class="span4 offset4">
                <h2>Sign in</h2>

                <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                    <table>
                        <tr><td>Email: </td>
                            <td>     <%= f.text_field :email, :autofocus => true, :placeholder => "Hello" %></td></tr>
                        <tr><td>Password:</td>
                            <td><%= f.password_field :password, :placeholder => "********" %></td></tr>
                    </table>
  <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> Remember me</div>
  <% end -%>  <br>
  <div><%= f.submit "Sign in" %></div>
<% end %>

<%= render "devise/shared/links" %>
<hr>
<%= link_to (image_tag "Devise/facebookicon.png", :size => "60x60", :title => "Facebook")%>
<%= link_to (image_tag "Devise/twittericon.png", :size => "60x60", :title => "Twitter")%>
<%= link_to (image_tag "Devise/github.png", :size => "60x60", :title => 'Github')%>
</div>
</div>
</div>
</div>
<% end %>
